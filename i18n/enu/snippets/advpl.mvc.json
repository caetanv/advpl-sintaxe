{
  "MVCMD1": {
    "prefix": "MVC Model 1",
    "body": [
      "/*//#########################################################################################",
      "Project  : ${project}",
      "Module   : ${module}",
      "Source   : ${TM_FILENAME_BASE}",
      "Objective: ${objective}",
      "*///#########################################################################################",
      "",
      "#INCLUDE 'TOTVS.CH'",
      "#INCLUDE 'FWMVCDEF.CH'",
      "",
      "/*/{Protheus.doc} ${TM_FILENAME_BASE}",
      "",
      "   Cadastro MVC Modelo 1",
      "",
      "   @author  ${Name}",
      "   @example ${Exemple}",
      "   @param   [${Parameter_Name}],${Parameter_type},${Parameter_Description}",
      "   @return  ${Return}",
      "   @table   ${Tables}",
      "   @since   ${CURRENT_DATE}-${CURRENT_MONTH}-${CURRENT_YEAR}",
      "/*/",
      "",
      "User Function ${TM_FILENAME_BASE}()",
      "    Local aArea   := GetArea()",
      "    Local oBrowse",
      "",
      "    //Instânciando FWMBrowse - Somente com dicionário de dados",
      "    oBrowse := FWMBrowse():New()",
      "",
      "    //Setando a tabela de cadastro de Autor/Interprete",
      "    oBrowse:SetAlias('${tabela_base}')",
      "",
      "    //Setando a descrição da rotina",
      "    oBrowse:SetDescription(cTitle)",
      "",
      "    //Legends",
      "    ${MVCLeg}",
      "",
      "    //Ativa a Browse",
      "    oBrowse:Activate()",
      "",
      "    RestArea(aArea)",
      "Return Nil",
      "",
      "/*/{Protheus.doc} MenuDef",
      "   Criação do menu MVC",
      "",
      "   @author  ${Name}",
      "   @example ${Exemple}",
      "   @param   [${Parameter_Name}],${Parameter_type},${Parameter_Description}",
      "   @return  ${Return}",
      "   @table   ${Tables}",
      "   @since   ${CURRENT_DATE}-${CURRENT_MONTH}-${CURRENT_YEAR}",
      "/*/",
      "",
      "Static Function MenuDef()",
      "    Local aRot := {}",
      "",
      "    //Adicionando opções",
      "    ADD OPTION aRot TITLE 'Visualizar' ACTION 'VIEWDEF.${TM_FILENAME_BASE}' OPERATION MODEL_OPERATION_VIEW   ACCESS 0 //OPERATION 1",
      "    ADD OPTION aRot TITLE 'Legend'    ACTION 'StaticCall(${TM_FILENAME_BASE},Legend)'     OPERATION 6                      ACCESS 0 //OPERATION X",
      "    ADD OPTION aRot TITLE 'Incluir'    ACTION 'VIEWDEF.${TM_FILENAME_BASE}' OPERATION MODEL_OPERATION_INSERT ACCESS 0 //OPERATION 3",
      "    ADD OPTION aRot TITLE 'Alterar'    ACTION 'VIEWDEF.${TM_FILENAME_BASE}' OPERATION MODEL_OPERATION_UPDATE ACCESS 0 //OPERATION 4",
      "    ADD OPTION aRot TITLE 'Excluir'    ACTION 'VIEWDEF.${TM_FILENAME_BASE}' OPERATION MODEL_OPERATION_DELETE ACCESS 0 //OPERATION 5",
      "",
      "Return aRot",
      "",
      "/*/{Protheus.doc} MenuDef",
      "   Criação do Model de dados MVC ",
      "",
      "   @author  ${Name}",
      "   @example ${Exemple}",
      "   @param   [${Parameter_Name}],${Parameter_type},${Parameter_Description}",
      "   @return  ${Return}",
      "   @table   ${Tables}",
      "   @since   ${CURRENT_DATE}-${CURRENT_MONTH}-${CURRENT_YEAR}",
      "/*/",
      "",
      "Static Function ModelDef()",
      "    //Criação do objeto do Model de dados",
      "    Local oModel := Nil",
      "",
      "    //Criação da estrutura de dados utilizada na interface",
      "    Local oSt${tabela_base} := FWFormStruct(1, \"${tabela_base}\")",
      "",
      "    //Instanciando o Model, não é recomendado colocar nome da user function (por causa do u_), respeitando 10 caracteres",
      "    oModel := MPFormModel():New(\"${TM_FILENAME_BASE}M\",/*bPre*/, /*bPos*/,/*bCommit*/,/*bCancel*/) ",
      "",
      "    //Atribuindo formulários para o Model",
      "    oModel:AddFields(\"FORM${tabela_base}\",/*cOwner*/,oSt${tabela_base})",
      "",
      "    //Setando a chave primária da rotina Ex: 'BM_FILIAL','BM_GRUPO'",
      "    oModel:SetPrimaryKey(AllTrim(Separa(POSICIONE('SIX',1,'${tabela_base}','SIX->CHAVE'),'+',.F.)))",
      "",
      "    //Adicionando descrição ao Model",
      "    oModel:SetDescription(\"Model de Dados do Cadastro \"+cTitle)",
      "",
      "    //Setando a descrição do formulário",
      "    oModel:GetModel(\"FORM${tabela_base}\"):SetDescription(\"Formulário do Cadastro \"+cTitle)",
      "Return oModel",
      "",
      "/*/{Protheus.doc} MenuDef",
      "   Criação da visão MVC ",
      "",
      "   @author  ${Name}",
      "   @example ${Exemple}",
      "   @param   [${Parameter_Name}],${Parameter_type},${Parameter_Description}",
      "   @return  ${Return}",
      "   @table   ${Tables}",
      "   @since   ${CURRENT_DATE}-${CURRENT_MONTH}-${CURRENT_YEAR}",
      "/*/",
      "",
      "",
      "Static Function ViewDef()",
      "    //Criação do objeto do Model de dados da Interface do Cadastro de Autor/Interprete",
      "    Local oModel := FWLoadModel(\"${TM_FILENAME_BASE}\")",
      "",
      "    //Criação da estrutura de dados utilizada na interface do cadastro de Autor",
      "    Local oSt${tabela_base} := FWFormStruct(2, \"${tabela_base}\")  //pode se usar um terceiro parâmetro para filtrar os campos exibidos { |cCampo| cCampo $ 'SBM_NOME|SBM_DTAFAL|'}",
      "",
      "    //Criando oView como nulo",
      "    Local oView := Nil",
      "",
      "    //Criando a view que será o retorno da função e setando o Model da rotina",
      "    oView := FWFormView():New()",
      "    oView:SetModel(oModel)",
      "",
      "    //Atribuindo formulários para interface",
      "    oView:AddField(\"VIEW_${tabela_base}\", oSt${tabela_base}, \"FORM${tabela_base}\")",
      "",
      "    //Criando um container com nome tela com 100%",
      "    oView:CreateHorizontalBox(\"TELA\",100)",
      "",
      "    //Colocando título do formulário",
      "    oView:EnableTitleView('VIEW_${tabela_base}', 'Dados do ' + cTitle )  ",
      "",
      "    //Força o fechamento da janela na confirmação",
      "    oView:SetCloseOnOk({||.T.})",
      "",
      "    //O formulário da interface será colocado dentro do container",
      "    oView:SetOwnerView(\"VIEW_${tabela_base}\",\"TELA\")",
      "Return oView",
      "",
      "/*/{Protheus.doc} MenuDef",
      "   Função para mostrar a Legend das rotinas MVC",
      "",
      "   @author  ${Name}",
      "   @example ${Exemple}",
      "   @param   [${Parameter_Name}],${Parameter_type},${Parameter_Description}",
      "   @return  ${Return}",
      "   @table   ${Tables}",
      "   @since   ${CURRENT_DATE}-${CURRENT_MONTH}-${CURRENT_YEAR}",
      "/*/",
      "",
      "",
      "Static Function Legend()",
      "    Local aLegend := {}",
      "",
      "    //Monta as cores",
      "    AADD(aLegend,{\"color\",Original  })",
      "    AADD(aLegend,{\"color\",Não Original})",
      "",
      "    BrwLegend('Legend ' + cTitle, \"Procedencia\", aLegend)",
      "Return"
    ],
    "description": "Monta Browse MVC Model 1."
  },
  "MVCLEG": {
    "prefix": "MVC Legend",
    "body": [
      "oBrowse:AddLegend( ${condition}, \"${color}\",\"${description}\" )"
    ],
    "description": "Add Legend MVC."
  }
}
